{
    "source": "./source",
    "destination": "./_site",
    "metadata": {
        "site": {
            "title": "JS Conf China 2014",
            "description": "A two-day conference for Chinese Javascript & Node.js developer community, to be held in Hangzhou."
        }
    },
    "metalsmith": {
        "metalsmith-drafts": {},
        "metalsmith-templates": {
            "engine": "swig",
            "cache": false,
            "directory": "./templates"
        },
        "metalsmith-assets": null,
        "metalsmith-static": null
    },             
    "assets": {
        "vendor": {
            "js": [
                "vendor/jquery/dist/jquery.js",
                "vendor/highlightjs/highlight.pack.js",
                "vendor/swipe/swipe.js"
            ],
            "css": [
                "vendor/normalize-css/normalize.css"
            ]
        },
        "custom": {
            "js": [
                "assets/js/*.js"
            ],
            "css": [
                "assets/css/*.css"
            ],
            "scss": [
                "assets/scss/**/*.{scss,sass}"
            ]
        }
    }
}
